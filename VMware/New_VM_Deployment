# https://blogs.vmware.com/PowerCLI/2014/06/working-customization-specifications-powercli-part-3.html
# https://www.vmware.com/support/developer/PowerCLI/PowerCLI41U1/html/New-VM.html


$New_VM = Import-Csv ".\New_VMlist.csv"

foreach ($New_VM in $New_VMs) {
    $VM_Name = $New_VM.VN_Name
    $Cluster = $New_VM.Cluster
    $IP_Address = $New_VM.IP_Address
    $Subnet_Mask = $New_VM.Subnet_Mask
    $Template = $New_VM.Template
    $Cust_Name = $New_VM.Cust_Name

New-VM -Name $VM_Name -

New-VM –Name $VM_Name –ResourcePool $cluster –Template $template

   }
   
